<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_vertical"
    android:orientation="horizontal"
    android:paddingTop="@dimen/d_10dp"
    android:paddingBottom="@dimen/d_10dp" >

    <ImageView
        android:id="@+id/icon"
        android:layout_width="@dimen/d_110dp"
        android:layout_height="@dimen/d_110dp"
        android:clickable="true"
        android:scaleType="fitXY"
        android:src="@drawable/default_food_pic" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginLeft="@dimen/d_16dp"
        android:gravity="left|center_vertical"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:singleLine="true"
            android:textColor="@android:color/black"
            android:textSize="@dimen/d_26dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/price"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:singleLine="true"
            android:textColor="#3eab00"
            android:textSize="@dimen/d_26dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="right|center_vertical"
        android:orientation="horizontal" >

        <Button
            android:id="@+id/sub"
            android:layout_width="@dimen/d_64dp"
            android:layout_height="@dimen/d_64dp"
            android:background="@drawable/btn_sub"
            android:visibility="invisible" />

        <TextView
            android:id="@+id/count"
            android:layout_width="@dimen/d_48dp"
            android:layout_height="wrap_content"
            android:textColor="#ff0000"
            android:gravity="center"
            android:textSize="@dimen/d_26dp" />

        <Button
            android:id="@+id/add"
            android:layout_width="@dimen/d_64dp"
            android:layout_height="@dimen/d_64dp"
            android:background="@drawable/btn_add" />
    </LinearLayout>

</LinearLayout>